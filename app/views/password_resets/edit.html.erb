<h1>Reset password</h1>

<%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |form| %>

  <% render 'layouts/error_messages', object: form.object %>

  <%= hidden_field_tag :email, @user.email %>

  <div class="m-3">
    <%= form.label :password, class:"input-label" %>
    <%= form.password_field :password, class:"form-control input-field" %>
  </div>

  <div class="m-3">
    <%= form.label :password_confirmation, "Confirmation", class:"input-label" %>
    <%= form.password_field :password_confirmation, class:"form-control input-field" %>
  </div>

  <div class="m-3">
    <%= form.submit "Update password", class:"btn btn-primary" %>
  </div>
<% end %>