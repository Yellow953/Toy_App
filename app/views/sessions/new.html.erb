<h1>Login</h1>

<%= form_with(url: sign_in_path, scope: :session, local: true) do |form| %>
  <% render 'layouts/error_messages', object: form.object %>
  
  <div class="m-3">
    <%= form.label :email, class:"input-label" %>
    <%= form.text_field :email, class:"form-control input-field" %>
  </div>

  <div class="m-3">
    <%= form.label :password, class:"input-label" %>
    <%= form.password_field :password, class:"form-control input-field" %>
  </div>

  <%= link_to "Forgot your password", new_password_reset_path%>
 
  <%= form.label :remember_me, class:"checkbox inline" do %>
    <%= form.check_box :remember_me %>
    <span>Remember me</span>
  <% end %>


  <div class="m-3">
    <%= form.submit "Login", class:"btn btn-primary" %>
  </div>
<% end %>

<div>
    New user?
    <%= link_to "Register", register_path %>
</div>

<br>

<div>
  <%= link_to "Back Home", root_path, class:"btn btn-secondary" %>
</div>
