<header>
    <nav class="navbar navbar-expand-lg bg-secondary">
        <div class="container-fluid">
          <%= link_to "Home", root_path, id: "Logo" ,class: "navbar-brand" %>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <li><%= link_to "Home", static_pages_home_path, class: "nav-link" %></li>
              </li>
              <li class="nav-item">
                <li><%= link_to "About", static_pages_about_path, class: "nav-link" %></li>
              </li>
              <li class="nav-item">
                <li><%= link_to "Help", static_pages_help_path, class: "nav-link" %></li>
              </li>
            </ul>

            <div class="d-flex">
              <% if logged_in? %>
                  <%= link_to "Profile", current_user, class: "nav-link mx-2 btn btn-secondary" %>
                  <%= button_to "Logout", logout_path, method: :delete, class: "nav-link mx-2 btn btn-secondary" %>
              <% else %>
                <%= link_to "Login", login_path, class: "nav-link mx-2 btn btn-secondary" %>
                <%= link_to "Register", register_path, class: "nav-link mx-2 btn btn-secondary" %>
              <% end %>
            </div>
        </div>
    </nav>
</header>