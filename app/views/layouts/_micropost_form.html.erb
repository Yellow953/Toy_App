<div class="card p-5">
    <%= form_with(model: @micropost, local: true) do |form| %>
        <% render 'layouts/error_messages', object: form.object %>
'
        <div>
            <%= form.text_area :content, placeholder:"Compose new Micropost", class:"input-field form-control" %>
        </div><br>

        <div>
            <%= form.file_field :image, class:"form-control input-field", accept: "image/jpeg,image.gif,image/png" %>
        </div>

        <div>
            <%= form.submit "Post", class:"btn btn-primary px-5 m-5" %>
        </div>
    <% end %>
</div>

<script type="text/javascript">
    $("#micropost_image").bind("change", function(){
        const size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert("Maximum file size is 5MB. Please choose a smaller file.");
            $("#micropost_image").val("")
        }
    });
</script>