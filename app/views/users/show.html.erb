
<div class="row">
  <div class="col-md-4" >
    <%= render @user %>
    <%= render "layouts/stats" %>
    <div>
      <%= link_to "Edit this user", edit_user_path(@user), class:"btn btn-warning m-1" %> |
      <%= link_to "Back to users", users_path, class:"btn btn-secondary m-1" %>

      <%= button_to "Destroy this user", @user, form: { data: { turbo_confirm: "Are you sure that you want to delete this user?" } }, method: :delete, class: "btn btn-danger m-1" %>
    </div>
  </div>

  <div class="col-md-8" >
    <% if @user.microposts.any?%>
      <h3> Microposts : <%= @user.microposts.count %>
      <div class="card">
        <%= render @microposts%>
      </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
