<div id="<%= dom_id micropost %>" class="my-3">
  <div class="row" style="text-align:left">
    <div class="col-6">
    <%= image_tag micropost.image, class:"img-fluid img-responsive p-2" if micropost.image.attached? %>
    </div>  
    <div class="col-6 my-auto">
      <p><%= micropost.content %></p>
      <p> 
        <strong>User:</strong>
        <%= micropost.user_id %>
      </p>
    </div> 
  </div>  

  <% if micropost.user_id == current_user.id %>
    <div class="d-flex flex-row justify-content-center">
      <%= link_to "Edit", edit_micropost_path(micropost), class:"btn btn-warning mx-2" %>
      <%= button_to "Delete", micropost, method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this micropost?' }, class:"btn btn-danger mx-2" %>
    </div>
  <% end %>

</div><hr>
